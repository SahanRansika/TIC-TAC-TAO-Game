<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="ancLogin" prefHeight="550.0" prefWidth="300.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tictactoe.tictactoe.controller.LoginController">
   <children>
      <ImageView fitHeight="558.0" fitWidth="324.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/game3.jpg" />
         </image>
      </ImageView>

      <!-- Login Button, triggers video stop in controller -->
      <Button fx:id="btnPlay" layoutX="61.0" layoutY="425.0" mnemonicParsing="false" onAction="#btnPlayOnAction" prefHeight="44.0" prefWidth="190.0" style="-fx-background-color: green; -fx-border-radius: 20;" text="Play" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="36.0" />
         </font>
      </Button>
      <ImageView fitHeight="209.0" fitWidth="226.0" layoutX="51.0" layoutY="140.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/game2.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
